    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="500"
    Height="650"
    MinWidth="400"
    MinHeight="650"
    MaxWidth="600"
    MaxHeight="700"
    MouseMove="Window_MouseMove"
    mc:Ignorable="d">

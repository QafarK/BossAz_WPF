        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">


            <TextBlock
                Margin="0,25,0,0"
                HorizontalAlignment="Center"
                FontSize="40"
                FontWeight="SemiBold"
                Foreground="DarkBlue">
                Welcome !
            </TextBlock>
            <Label
                x:Name="usernameLabel"
                Margin="0,40,0,0"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="DemiBold"
                Foreground="#FF673AB7">
                username
            </Label>
            <TextBox
                x:Name="textBoxUsername"
                Width="350"
                Height="45"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="AliceBlue"
                FontSize="20"
                KeyDown="textBoxUsername_KeyDown"
                Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />


            <Label
                x:Name="passwordLabel"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="DemiBold"
                Foreground="#FF673AB7">
                password
            </Label>
            <PasswordBox
                x:Name="textBoxPassword"
                Width="350"
                Height="45"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                w:PasswordHelper.Attach="True"
                w:PasswordHelper.Password="{Binding Password, Mode=TwoWay}"
                Background="AliceBlue"
                FontSize="20"
                KeyDown="textBoxPassword_KeyDown" />
            <Button
                Height="45"
                Margin="0,40,0,0"
                VerticalContentAlignment="Center"
                Command="{Binding LoginCommand}"
                FontSize="15">
                Log in
            </Button>
            <TextBlock
                Height="30"
                Margin="7,0,0,0"
                FontSize="15"
                Foreground="Red"
                Text="{Binding ErrorLogin}" />

            <TextBlock
                Margin="0,12,0,5"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold">
                or
            </TextBlock>

            <Button
                x:Name="signUp"
                Height="45"
                Margin="0,20,0,0"
                VerticalContentAlignment="Center"
                Command="{Binding SignUpCommand}"
                FontSize="15">
                Sign up
            </Button>
        </StackPanel>

